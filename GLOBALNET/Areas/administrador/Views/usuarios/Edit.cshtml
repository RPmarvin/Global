@model GLOBALNET.Models.usuario

@{
    ViewBag.Title = "Edit";
}

<h2>EDITAR USUARIO</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id_usuario)

        <!-- inicio datos-->

        <table>
            <tr>
                <td>NOMBRE </td>
                <td>
                    @Html.EditorFor(model => model.nombre_usuario, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.nombre_usuario, "", new { @class = "text-danger" })
                </td>

            </tr>
            <tr>
                <td><hr></td>
                <td><hr></td>
            </tr>
            <tr>
                <td>APELLIDOS </td>
                <td>
                    @Html.EditorFor(model => model.apellido_usuario, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.apellido_usuario, "", new { @class = "text-danger" })
                </td>

            </tr>
            <tr>
                <td><hr></td>
                <td><hr></td>
            </tr>
            <tr>
                <td>DNI </td>
                <td>
                    @Html.EditorFor(model => model.dni_usuario, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.dni_usuario, "", new { @class = "text-danger" })
                </td>

            </tr>
            <tr>
                <td><hr></td>
                <td><hr></td>
            </tr>
            <tr>
                <td>CARGO </td>
                <td>
                    @Html.EditorFor(model => model.cargo_usuario, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.cargo_usuario, "", new { @class = "text-danger" })
                </td>

            </tr>
            <tr>
                <td><hr></td>
                <td><hr></td>
            </tr>
            <tr>
                <td>SEDE </td>
                <td>
                    @Html.EditorFor(model => model.Sede_usuario, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Sede_usuario, "", new { @class = "text-danger" })
                </td>

            </tr>
            <tr>
                <td><hr></td>
                <td><hr></td>
            </tr>
        </table>
        <!-- fin datos -->

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="GUARDAR" class="btn btn-primary" />
            </div>
        </div>
        <br>
    </div>
}

<div>
    @Html.ActionLink("Regresar", "Index")
</div>
